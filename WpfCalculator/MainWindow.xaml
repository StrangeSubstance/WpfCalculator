<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCalculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="250">
    <Grid x:Name="myGrid">
        <StackPanel x:Name="mySP">



            <Button Click="Button_Click" Content="Новое действие" Margin="25, 50, 25, 0"/>

            <Button Click="Delete" Content="Удалить" Margin="25, 10, 25, 0"/>

            <Label x:Name="label_res" Margin="0, 60, 0, 0" MinHeight="40" MaxHeight="50" MinWidth="100" MaxWidth="120" Width="100" />
        </StackPanel>
    </Grid>
</Window>
